@model List<Web.Models.CommitmentForm>;


<div class="card shadow border-0 my-4">
	<div class="card-header bg-primary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Commitment Form List</h2>
			</div>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6"></div>
			<div class="col-6 text-end">
				<a asp-area="User" asp-controller="CommitmentForm" asp-action="Upsert" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i> &nbsp; Create Commitment Form
				</a>
			</div>
		</div>
		<table id="tblData" class="table table-border table-striped" style="width:100%">
			<thead>
				<tr>
					<th>OrganizationName</th>
					<th>AdvicerName</th>
					<th>HomeAddress</th>
					<th>ContactNo</th>
					<th>College</th>
					<th>AcademicRank</th>
					<th></th>
				</tr>
			</thead>
		</table>
	</div>
</div>

@section Scripts {
	<script src="~/js/Commitment.js"></script>
}