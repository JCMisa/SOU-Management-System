@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li>
            <a id="manage" class="n-nav__link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li>
        <a class="n-nav__link">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn">Logout</button>
            </form>
        </a>
    </li>
}
else
{
    <li>
            <a class="n-nav__link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li>
            <a class="n-nav__link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

